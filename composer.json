{
    "name": "fousky/mapautulku",
    "description": "Open-source project for MapaUtulku.cz site.",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.2.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-sodium": "*",
        "consistence/consistence": "^1.1",
        "ramsey/uuid-doctrine": "^1.5",
        "sensio/framework-extra-bundle": "^5.2",
        "sensiolabs/security-checker": "^4.1",
        "sonata-project/admin-bundle": "^3.39",
        "sonata-project/core-bundle": "^3.11",
        "sonata-project/doctrine-orm-admin-bundle": "^3.6",
        "stof/doctrine-extensions-bundle": "^1.3",
        "symfony/apache-pack": "^1.0",
        "symfony/asset": "*",
        "symfony/console": "*",
        "symfony/expression-language": "*",
        "symfony/flex": "^1.1",
        "symfony/form": "*",
        "symfony/framework-bundle": "*",
        "symfony/monolog-bundle": "*",
        "symfony/orm-pack": "*",
        "symfony/process": "*",
        "symfony/security-bundle": "*",
        "symfony/serializer-pack": "*",
        "symfony/swiftmailer-bundle": "*",
        "symfony/twig-bundle": "*",
        "symfony/validator": "*",
        "symfony/web-link": "*",
        "symfony/yaml": "*",
        "white-october/pagerfanta-bundle": "^1.2"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phpstan/phpstan-shim": "^0.10.3",
        "slevomat/coding-standard": "^4.8",
        "symfony/debug-pack": "*",
        "symfony/dotenv": "*",
        "symfony/maker-bundle": "*",
        "symfony/profiler-pack": "*",
        "symfony/test-pack": "*",
        "symfony/thanks": "*",
        "symfony/web-server-bundle": "*"
    },
    "config": {
        "platform": {
            "php": "7.2.0"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "ci": [
            "@composer validate --no-check-all",
            "@composer install --no-progress --no-interaction --no-suggest --no-scripts",
            "@lint",
            "@cs",
            "@stan",
            "@test"
        ],
        "cs": "phpcs --standard=phpcs.xml --extensions=php --tab-width=4 -sp src tests public",
        "cbf": "phpcbf --standard=phpcs.xml --extensions=php --tab-width=4 -sp src tests public",
        "lint": "parallel-lint -j 10 --exclude vendor --exclude bin --exclude templates --exclude var .",
        "stan": "php vendor/phpstan/phpstan-shim/phpstan.phar analyse -c phpstan.neon src tests public --level 7 --no-progress",
        "test": "php bin/phpunit"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.1.*"
        }
    }
}
