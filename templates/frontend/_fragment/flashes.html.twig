{% for label, messages in app.flashes %}
    <div class="container">
        <div class="row my-4">
            <div class="col-md-12">
                <div class="alert alert-{{ label }}">
                    <ul class="my-0">
                        {% for message in messages %}
                            <li>{{ message }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endfor %}
