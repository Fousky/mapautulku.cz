{# @var org \App\Entity\Organization\Organization #}
{% extends 'email/_email_layout.html.twig' %}

{% block content %}

    <h2 style="margin-bottom:20px;">Žádost o přidání organizace</h2>

    <hr />

    <table cellpadding="0" cellspacing="0" border="0" style="margin-bottom:20px;width:100%;">
        <tr style="padding-bottom:10px;">
            <td><strong>Název</strong>:</td>
            <td>{{ org.name }}</td>
        </tr>

        {% if org.crn is not empty %}
            <tr style="padding-bottom:10px;">
                <td><strong>IČ</strong>:</td>
                <td>{{ org.crn }}</td>
            </tr>
        {% endif %}

        {% if org.phone is not empty %}
            <tr style="padding-bottom:10px;">
                <td><strong>Telefon</strong>:</td>
                <td>{{ org.phone }}</td>
            </tr>
        {% endif %}

        {% if org.email is not empty %}
            <tr style="padding-bottom:10px;">
                <td><strong>Email</strong>:</td>
                <td>{{ org.email }}</td>
            </tr>
        {% endif %}

        {% if org.facebook is not empty %}
            <tr style="padding-bottom:10px;">
                <td><strong>Facebook</strong>:</td>
                <td>{{ org.facebook }}</td>
            </tr>
        {% endif %}

        {% if org.www is not empty %}
            <tr style="padding-bottom:10px;">
                <td><strong>Web</strong>:</td>
                <td>{{ org.www }}</td>
            </tr>
        {% endif %}
    </table>

    <p><a href="{{ url('_admin_organization_list') }}" target="_blank">Odkaz do administrace</a></p>

{% endblock %}
