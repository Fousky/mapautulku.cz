{% block gps_widget %}
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.latitude) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.longitude) }}
        </div>
        {% if form.button is defined %}
            <div class="col-md-12">
                {{ form_row(form.button) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
